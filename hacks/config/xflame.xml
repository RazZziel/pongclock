<?xml version="1.0" encoding="ISO-8859-1"?>

<screensaver name="xflame" _label="Xflame">

  <command arg="-root"/>

  <number id="delay" type="slider" arg="-delay %"
          _label="Speed" _low-label="Slow" _high-label="Fast"
          low="0" high="20000" default="10000"
          convert="invert"/>

<!--  <file id="bitmap" _label="Bitmap File" arg="-bitmap %"/> -->

  <!-- #### -baseline [20] -->
  <!-- #### -hspread [30] -->
  <!-- #### -vspread [97] -->
  <!-- #### -residual [99] -->
  <!-- #### -variance [50] -->
  <!-- #### -vartrend [20] -->

  <boolean id="bloom" _label="Enable Blooming" arg-unset="-no-bloom"/>

  <_description>
Draws a simulation of pulsing fire.  It can also take an arbitrary
image and set it on fire too.

Written by Carsten Haitzler and many others; 1999.
  </_description>
</screensaver>
